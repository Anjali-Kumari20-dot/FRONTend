<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Mini Whatsapp</title>
    <link rel="stylesheet" href="style.css" />
  </head>
  <body>
    <div class="heading">
      <h3>All Chats</h3>
    </div>
    <br /><br />
    <form method="GET" action="/chats/new" class="chat" id="myform">
      <div class="buttons" onclick="document.getElementById('myform').submit()">
        Add Chat +
      </div>
      <!-- <button>New Chat</button> -->
    </form>
    <% for(let chat of chats) { %>
    <div class="chat">
      <p id="from">From : <%= chat.from %></p>
      <div class="msg">
        <h5><%= chat.msg %></h5>
        <br /><br />
        <form method="GET" action="/chats/<%= chat._id %>/edit">
          <div class="buttons edit" onclick="this.parentNode.submit()">
            Edit
          </div>
        </form>
      </div>
      <form method="POST" action="/chats/<%= chat._id %>/?_method=DELETE">
        <div class="buttons delete" onclick="this.parentNode.submit()">
          DELETE
        </div>
      </form>
      <p id="to">Received by <%= chat.to %></p>
      <p><%= chat.created_at.toString().split(" ")[4] %></p>
      <p><%= chat.created_at.toString().split(" ").slice(0, 4).join(" ") %></p>
      <hr />
    </div>
    <br /><br />
    <% } %>
  </body>
</html>
